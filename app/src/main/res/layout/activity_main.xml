<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.example.imageviewlib.QMUIRadiusImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/ic_image_black_24dp"
        app:qmui_border_color="#ff00ff"
        app:qmui_border_width="1px"
        app:qmui_is_circle="true"
        app:qmui_selected_border_color="#ffff00"
        app:qmui_selected_border_width="1px"
        app:qmui_selected_mask_color="#00ffff"/>

    <com.example.imageviewlib.QMUIRadiusImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/ic_image_black_24dp"
        app:qmui_border_color="#ff00ff"
        app:qmui_border_width="1px"
        app:qmui_corner_radius="15dp"
        app:qmui_selected_border_color="#ffff00"
        app:qmui_selected_border_width="1px"
        app:qmui_selected_mask_color="#00ffff"/>

</LinearLayout>